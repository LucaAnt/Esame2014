<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cellTextViewNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOME ALBERGO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cellTextViewCitta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CITTA"
        app:layout_constraintEnd_toStartOf="@+id/cellTextViewStelle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cellTextViewNome" />

    <TextView
        android:id="@+id/cellTextViewStelle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STELLE"
        app:layout_constraintBottom_toBottomOf="@+id/cellTextViewCitta"
        app:layout_constraintEnd_toStartOf="@+id/cellTextViewPrezzo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/cellTextViewCitta" />

    <TextView
        android:id="@+id/cellTextViewPrezzo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PREZZO"
        app:layout_constraintBottom_toBottomOf="@+id/cellTextViewStelle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/cellTextViewStelle" />
</androidx.constraintlayout.widget.ConstraintLayout>